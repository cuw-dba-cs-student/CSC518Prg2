<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLoyaltyPrg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/addLoyaltyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onAddLoyaltyButtonPressed"
            android:text="Submit" />

        <EditText
            android:id="@+id/programNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Loyalt Program Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/bankText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Bank Affiliation"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/curPrgBalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Current Balance"
            android:inputType="number" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>